<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggedInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_width="@dimen/_500sdp"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:hint="Email"
            android:gravity="center"/>

        <EditText
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_below="@id/email"
            android:hint="Password"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textforget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:text="Forgot Password?"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_175sdp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginbutton"
            android:text="Login"
            app:strokeWidth="3dp"
            app:strokeColor="@android:color/holo_blue_dark"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_below="@id/textforget" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singbutton"
            android:text="Signup"
            app:strokeWidth="3dp"
            app:strokeColor="@android:color/holo_blue_dark"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_below="@id/loginbutton" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>