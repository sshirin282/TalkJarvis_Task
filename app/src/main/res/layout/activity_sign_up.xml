<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <EditText
        android:hint="  Username"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"/>


    <EditText
        android:hint="  Email Id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/email"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/username"/>

    <EditText
        android:hint=" Phone No."
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/phone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/email"/>

        <EditText
            android:hint="  Password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/password1"
            android:layout_below="@id/phone"
            android:layout_marginTop="@dimen/_10sdp" />

    <EditText
        android:hint="  Email(optinal)"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/emailoptiona1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/password1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signtext"
        android:textColor="@color/black"
        android:layout_below="@id/emailoptiona1"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="*email required if you forgot password or want to change password in future."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signupbutton"
        android:text="SIGNUP"
        app:strokeWidth="3dp"
        app:strokeColor="@android:color/holo_blue_dark"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_below="@id/signtext" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginbutton"
        android:text="LOGIN"
        app:strokeWidth="3dp"
        app:strokeColor="@android:color/holo_blue_dark"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_below="@id/signupbutton" />
</RelativeLayout>